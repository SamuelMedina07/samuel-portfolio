---
const currentYear = new Date().getFullYear();
import WhatsappIcon from "./icons/Whatsapp.astro";
import Phone from "./icons/Phone.astro";
import SocialPill from "@/components/SocialPill.astro";
---
<footer
  class="opacity-80 m-4 min-[375px]:pl-4 md:pl-0 mt-16 w-full mx-auto container lg:max-w-4xl 
md:max-w-2xl mb-10"
>
  <div
    class="rounded-lg w-full max-w-screen-xl mx-auto flex flex-col items-center gap-4 md:flex-row md:justify-between py-4"
  >
    <span class="text-sm sm:text-center text-zinc-800/90 dark:text-zinc-200/90 md:text-left">
      &copy; {currentYear}
      <a href="" class="hover:underline"> Samuel Ernesto Medina Ramirez</a>.
    </span>

    <div class="flex gap-4">
      <SocialPill href="https://wa.me/50495953118">
        <WhatsappIcon class="size-4" />
        Whatsapp
      </SocialPill>

      <SocialPill href="tel:+50488519700">
        <Phone class="size-4" />
        Llamar
      </SocialPill>
    </div>
  </div>
</footer>





















